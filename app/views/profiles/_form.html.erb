<div class="col-sm-8 mb-3 mb-md-0">
 <div class="card">
	 <h5 class="card-header h5">Edit profile</h5>
	  <div class="card-body">
		  <%= simple_form_for @profile  do |f| %>

			  <%= f.input :first_name %>
			  <%= f.input :last_name %>
			  <%= f.input :phone_number %>
			  <%= f.input :company %>
			  <%= f.input :date_of_birth, label: 'Date of birth (YYYY/MM/DD)' %>
			  <%= f.input :is_female, as: :radio_buttons %> </br>


			 <h5 class="card-header h5">Address details</h5>
					<%= f.simple_fields_for :address  do |ff| %>
				    <%#= ff.input :country %>
				    <%= ff.input :city %>
				    <%= ff.input :state %>
				    <%= ff.input :pincode %>
				    <%= ff.input :landmark %>
				    <%= ff.input :address %>
			      <%= ff.input :street_address %> 
      	    <% if params["controller"] == "orders" %>
      	      <%= hidden_field_tag 'order', 'true'  %>
      	    <% end %>  

			  <%= f.button :submit, 'Save', class: "btn btn-large btn-danger" %>
  

				<% end %>
		 <% end %>
		</div>	
  </div>
</div>

		 