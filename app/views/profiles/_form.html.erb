<div class="col-sm-8 mb-3 mb-md-0">
 <div class="card">
	 <h5 class="card-header h5">Edit profile</h5>
	  <div class="card-body">
		  <%= simple_form_for @profile  do |f| %>

			  <%= f.input :first_name %>
			  <%= f.input :last_name %>
			  <%= f.input :phone_number %>
			  <%= f.input :company %>
			  <%= f.input :date_of_birth, label: 'Date of birth (YYYY/MM/DD)' %>
			  <%= f.input :is_female, as: :radio_buttons %> </br>
			  <%= f.button :submit, 'Save', class: "btn btn-large btn-danger" %>
		 <% end %>
		</div>	
  </div>
</div>

<script type="text/javascript">
	var country = document.getElementById("country");

// When a user chooses a country, send a GET 
// request to the server with the country's id as a parameter
country.addEventListener("change", function(){
  $.ajax({
    url: "/states?country=" + country.value,
    type: "GET"
  })
})
</script>