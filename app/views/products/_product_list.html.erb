<div class="row">
  <div class="col-lg-3">
    <h6 class="my-4">Select category</h6>
    <div class="list-group">
      <% Category.all.each do |category| %>  <%= link_to "#{ category.name}", products_path(:id => category.id) , class: "list-group-item" %> <% end %>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <%= link_to image_tag(product.avatar.variant(resize_to_limit: [300, 300]), border: 0), product_path(product), class: 'card-img-top' rescue asset_path( '150x250.png' ) %>
            <div class="card-body">
              <h6 class="card-title">
                <a href="#"><%= product.name %></a>
              </h6>
              <h5>â‚¹<%= product.price %></h5>
              <p>Size M, L, XL, XXL</p>
              <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur!</p>
            </div>
            <%= link_to "Edit", edit_product_path(product.id) %>
            <%= link_to 'Destroy', product_path(product.id),
                data: {:confirm => 'Are you sure?'}, :method => :delete %>
            <div class="card-footer">
              <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
            </div>
          </div>
        </div>
      <% end %> 
    </div>
    <!-- /.row -->
  </div>
  <!-- /.col-lg-9 -->
</div>
<!-- /.row -->