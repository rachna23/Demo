<div class="col-lg-4">
  <div class="mb-3">
    <div class="pt-4">
      <h5 class="mb-3">The total amount of <%= current_user.cart.total_item %> items</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
            Subtotal:<span> â‚¹<%= current_user.cart.sub_total %></span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center px-0">
            Standard Ground Shipping:
            <span>Gratis</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
            <div>
              <strong>The total amount of</strong>
              <strong>
                <p class="mb-0">(including VAT)</p>
              </strong>
            </div>
            <span><strong><%= number_to_currency(current_user.cart.sub_total) %></strong></span>
          </li>
        </ul>
        <% if @current_cart.line_items.present? && params["controller"] == "carts" %>
          <button type="button" class="btn btn-primary btn-block"> <%= button_to "Proceed to checkout", new_order_path , method: :get,  :class => "btn btn-primary" %></button>
        <% end %>    
        <% unless  @current_cart.line_items.present? %>
          <div class="alert alert-warning" role="alert">
            Please select some items first.
          </div>
        <% end %>  
    </div>  <!-- pt-4 -->
  </div>  <!-- mb-3-->
</div>
<!--Grid column-->